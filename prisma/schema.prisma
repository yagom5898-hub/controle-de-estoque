generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

model User {
  id        Int      @id @default(autoincrement())
  name      String
  email     String   @unique
  createdAt DateTime @default(now())
}

model Charge {
  id         Int      @id @default(autoincrement())
  externalId String   @unique
  amount     Int
  currency   String   @default("BRL")
  status     String
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt
}
